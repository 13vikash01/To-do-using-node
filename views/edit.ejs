<%- include('partials/header'); -%>
<div class="conatiner">
    <h1 style="text-align:center;">Edit Your Post</h1>
    <div class="row">
        <div style="width: 30%; margin: 25px auto;">
            <form class="ui form" action="/todo/edit/<%= foundtodo._id %>?_method=PUT" method="POST">
               
                <div class="form-group">
                    <input class="form-control" type="text" name="text" value="<%= foundtodo.text %>">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit</button>
                </div>
            </form>
            <a href="/todo">Go back</a>
        </div>
    </div>
</div>
<%- include('partials/footer'); -%>